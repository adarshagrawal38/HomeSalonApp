<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletFragment"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="40dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_wallet"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Balance"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/color_grad_end"
                android:padding="10dp"
                />



            <EditText
                android:id="@+id/availBalance"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint=" â‚¹  0.00"
                android:textSize="18dp"
                android:focusable="true"
                android:inputType="number"
                android:layout_margin="15dp"
                android:background="@null"
                android:textColor="@color/color_grad_end"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/referafriend"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instant Earning Offer"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/color_grad_end"
                android:padding="10dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refer your Friend and Get 25 Mins worth Rs. 150/-"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/color_grad_end"
                android:padding="10dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>