    <ImageView
        android:id="@+id/cmp_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="125dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/logo_png_form" />

    <TextView
