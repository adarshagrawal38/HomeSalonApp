<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="460dp"
        android:id="@+id/testimonial_card_view"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/color_grad_end"
        app:cardMaxElevation="2dp"
        android:elevation="4dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/woman_icon"
                app:civ_border_color="#FFC0CB"
                android:layout_margin="8dp"
                app:civ_border_width="4dp"
                app:civ_shadow="false"
                app:civ_shadow_radius="10"
                android:id="@+id/testimonial_card_view_img"
                app:civ_shadow_color="#ffc0cb">

            </com.mikhaellopez.circularimageview.CircularImageView>

            <TextView
                android:id="@+id/testimonial_card_view_client_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"

                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/testimonial_card_view_img"
                android:text="Shivam Malhotra"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/testimonial_card_view_review"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_below="@id/testimonial_card_view_client_name"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:background="@drawable/transparent_btn_back"
                android:drawableLeft="@drawable/dot_mark"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Reviewed Home Salon"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/testimonial_card_view_desc"
                android:text="Very Good Service..good and professional lady
                Done the great job"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:textStyle="normal"
                android:textColor="@android:color/white"
                android:layout_below="@id/testimonial_card_view_img"

                />
            <View
                android:layout_width="match_parent"
                android:id="@+id/testimonial_divider"
                android:layout_below="@id/testimonial_card_view_desc"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profess_hired"
                android:text="Professional Hired"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:layout_margin="8dp"
                android:padding="4dp"
                android:textStyle="normal"
                android:textColor="@android:color/white"
                android:layout_below="@id/testimonial_card_view_desc"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profess_hired"

                />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_color="#FFC0CB"
                android:layout_margin="8dp"
                app:civ_border_width="4dp"
                app:civ_shadow="false"
                app:civ_shadow_radius="10"
                android:src="@drawable/logo_png_form"
                android:id="@+id/testimonial_card_view_logo"
                android:layout_below="@id/profess_hired"
                app:civ_shadow_color="#ffc0cb">

            </com.mikhaellopez.circularimageview.CircularImageView>


            <TextView
                android:id="@+id/testimonial_card_view_profes_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_below="@id/profess_hired"
                android:layout_toRightOf="@id/testimonial_card_view_logo"
                android:text="MINA SINGH"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="16dp"
                android:layout_marginVertical="8dp"
                android:layout_below="@id/testimonial_card_view_profes_name"
                android:layout_toRightOf="@id/testimonial_card_view_logo"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/star_mark"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/star_mark"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/star_mark"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/star_mark"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/star_mark"/>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>